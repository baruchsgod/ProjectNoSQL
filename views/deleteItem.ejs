    <div class="container">

      <h1 class="form_checklist"> Delete Company</h1>
      <form id="teamDelete" class="form_checklist" action="/delete/collection/items" method="POST">
        <div class="form-group">
          <label>Select the Company</label>
          <select name="selectedCompany" class="custom-select" id="selectedCompany">
            <option selected>Choose...</option>
            <% for(i=0;i<companies.length;i++){ %>
                <option value=<%= companies[i].id_company %>><%= companies[i].name %></option>

              <% } %>
          </select>
        </div>
        <input type="hidden" name="selector" value=<%= selector%>>
        <input type="hidden" name="user" value=<%=user%>>

      </form>
      <button class="btn btn-lg btn-danger" type="submit" onclick="deletePost()">Delete</button>
    </div>

    <script>
      function deletePost() {
        var companyDelete = document.getElementById('selectedCompany');
        var selected_company = companyDelete.options[companyDelete.selectedIndex].value;

        if(selected_company != "Choose..." ){
          var forms = "#teamDelete";
          var whole_form = $(forms);
          bootbox.confirm("Are you sure you want to delete this company?", function(result) {

            if (result) {

              whole_form.submit();

            } else {

            }
          })
        }else{
          alert("Please select an user before deleting");
        }

      }
    </script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
