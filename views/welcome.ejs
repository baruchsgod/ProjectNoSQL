<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Welcome</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

  <link rel="stylesheet" href="css/welcome.css">
  <link rel="stylesheet" href="css/sweetalert2.css">
</head>

<body>
  <div class="welcomeLogo">
    <h1 class="welcome">Welcome to </h1>
    <img src="images/sticky.png" alt="sticky" class="sticky">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
  </div>
  <br>
  <form class="" action="/home" method="post">
    <div class="container plan">
      <input id="uno" class="btn btn-lg btn-warning welcome_plan" type="submit" name="planA" value="Plan A"  />
      <input type="hidden" name="user" value=<%=user%>>
      <a href="#" onclick="information(uno.innerText)" >More Information...</a>
    </div>
    <br>
    <div class="container plan">
      <input id="dos" class="btn btn-lg btn-warning welcome_plan" type="submit" name="planB" value="Plan B"/>
      <a href="#" onclick="information(dos.innerText)">More Information...</a>
    </div>

    <br>
    <div class="container plan">
      <input id="tres" class="btn btn-lg btn-warning welcome_plan" type="submit" name="planC" value="Plan C" />
      <a href="#" onclick="information(tres.innerText)">More Information...</a>
    </div>
  </form>


  <script src="jquery/sweetalert2.all.min.js" charset="utf-8"></script>
  <script type="text/javascript">
    function information(plan) {

      if(plan==="Plan A"){
        Swal.fire({
          title: 'Plan A',
          text: 'Unlimited number of checklists for creation, 3 types of reports, unlimited comments',
          textColor:'#fff',
          imageUrl: 'images/sticky.png',
          imageWidth: 250,
          imageHeight: 100,
          imageAlt: 'Custom image',
          background:'#214252',
        })
      }else if (plan==="Plan B") {
        Swal.fire({
          title: 'Plan B',
          text: 'Max 10 checklists for creation, 2 types of reports, max 10 comments per checklist',
          imageUrl: 'images/sticky.png',
          imageWidth: 250,
          imageHeight: 100,
          imageAlt: 'Custom image',
          background:'#f05454',
        })
      }else{
        Swal.fire({
          title: 'Plan C',
          text: 'Max 5 checklists for creation, 1 type of report, max 5 comments per checklist',
          imageUrl: 'images/sticky.png',
          imageWidth: 250,
          imageHeight: 100,
          imageAlt: 'Custom image',
          background:'#3797a4',
        })
      }

    }
  </script>
</body>

</html>
